<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <View android:id="@id/strut" android:layout_width="0.0dip" android:layout_height="0.0dip" android:layout_centerHorizontal="true" />
        <LinearLayout android:orientation="vertical" android:background="@drawable/border" android:padding="@dimen/main_margin" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/main_margin" android:layout_marginTop="@dimen/main_margin" android:layout_marginRight="@dimen/main_half_margin" android:layout_marginBottom="@dimen/main_margin" android:layout_alignRight="@id/strut">
            <TextView android:textSize="@dimen/main_text_size" android:id="@id/labelSpinner" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/vehicles_spinner_prompt" />
            <Spinner android:textSize="@dimen/main_text_size" android:id="@id/spinnerVehicles" android:layout_width="fill_parent" android:layout_height="wrap_content" android:prompt="@string/vehicles_spinner_prompt" />
            <LinearLayout android:gravity="right" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageButton android:id="@id/buttonVehicleDelete" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_btn_delete" android:contentDescription="@string/delete_description" />
                <ImageButton android:id="@id/buttonVehicleEdit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_btn_edit" android:contentDescription="@string/edit_description" />
                <ImageButton android:id="@id/buttonVehicleAdd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_btn_add" android:contentDescription="@string/add_description" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@drawable/border" android:padding="@dimen/main_margin" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/main_half_margin" android:layout_marginTop="@dimen/main_margin" android:layout_marginRight="@dimen/main_margin" android:layout_marginBottom="@dimen/main_margin" android:layout_alignLeft="@id/strut">
            <Button android:textSize="@dimen/main_text_size" android:id="@id/buttonGetGas" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/get_gas_button_label" android:drawableLeft="@drawable/ic_gas_can" />
            <Button android:textSize="@dimen/main_text_size" android:id="@id/buttonViewLog" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/view_log_button_label" android:drawableLeft="@drawable/ic_notepad" />
            <Button android:textSize="@dimen/main_text_size" android:id="@id/buttonPlotData" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/plot_data_label" android:drawableLeft="@drawable/ic_plot" />
            <Button android:textSize="@dimen/main_text_size" android:id="@id/buttonViewStatistics" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/view_statistics_label" android:drawableLeft="@drawable/ic_stats" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>