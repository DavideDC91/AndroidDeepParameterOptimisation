<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_title_category_settings" android:key="@string/pref_key_category_settings" android:summary="@string/pref_summary_category_settings">
        <ListPreference android:entries="@array/arrayUnitsEntries" android:title="@string/pref_title_units" android:key="@string/pref_key_units" android:defaultValue="0" android:entryValues="@array/arrayUnitsEntryValues" />
        <ListPreference android:title="@string/pref_title_currency" android:key="@string/pref_key_currency" />
        <CheckBoxPreference android:title="@string/pref_title_require_cost" android:key="@string/pref_key_require_cost" android:summary="@string/pref_summary_require_cost" android:defaultValue="true" />
        <CheckBoxPreference android:title="@string/pref_title_display_cost" android:key="@string/pref_key_display_cost" android:summary="@string/pref_summary_display_cost" android:defaultValue="true" />
        <CheckBoxPreference android:title="@string/pref_title_display_notes" android:key="@string/pref_key_display_notes" android:summary="@string/pref_summary_display_notes" android:defaultValue="true" />
        <ListPreference android:entries="@array/arrayPlotFontSizeEntries" android:title="@string/pref_title_plot_font_size" android:key="@string/pref_key_plot_font_size" android:defaultValue="1" android:entryValues="@array/arrayPlotFontSizeEntryValues" />
        <Preference android:title="@string/pref_title_help" android:key="@string/pref_key_help" android:summary="@string/pref_summary_help" />
        <PreferenceScreen android:persistent="true" android:title="@string/pref_title_about" android:summary="@string/pref_summary_about">
            <Preference android:title="@string/pref_title_pkg_name" android:key="@string/pref_key_pkg_name" android:summary="@string/pref_summary_unknown" />
            <Preference android:title="@string/pref_title_pkg_version" android:key="@string/pref_key_pkg_version" android:summary="@string/pref_summary_unknown" />
            <Preference android:title="@string/pref_title_build_date" android:key="@string/pref_key_build_date" android:summary="@string/pref_summary_unknown" />
            <Preference android:title="@string/pref_title_database_version" android:key="@string/pref_key_database_version" android:summary="@string/pref_summary_unknown" />
        </PreferenceScreen>
        <Preference android:title="@string/pref_title_license" android:key="@string/pref_key_license" android:summary="@string/pref_summary_license" />
    </PreferenceCategory>
</PreferenceScreen>