            <TextView android:id="@id/textViewCost" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/total_cost_label" android:layout_below="@id/editTextPrice" />
            <EditText android:id="@id/editTextCost" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/hint_cost" android:ems="10" android:digits="0123456789.," android:layout_below="@id/textViewCost" android:inputType="numberDecimal" android:imeOptions="actionNext" />
            <TextView android:id="@id/textViewGallons" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/gasoline_label" android:layout_below="@id/editTextCost" />
