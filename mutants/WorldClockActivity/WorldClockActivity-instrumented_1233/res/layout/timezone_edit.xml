<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/timezone_edit_title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0" />
    <Button android:gravity="center|left" android:id="@id/button_timezone_edit_list" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/timezone_pick_zone" android:drawableRight="@drawable/dropdown_ic_arrow_normal_holo_dark" android:layout_weight="1.0" />
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/timezone_pick_name" android:layout_weight="1.0" />
    <EditText android:id="@id/timezone_edit_displayname" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0" />
    <Button android:id="@id/timezone_edit_save" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/timezone_save" android:layout_weight="1.0" />
    <Button android:id="@id/timezone_edit_cancel" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/timezone_cancel" android:layout_weight="1.0" />
</LinearLayout>