<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Text Edit Preferences">
        <CheckBoxPreference android:title="Line Wrap" android:key="linewrap" android:summary="Wraps lines when they get too long" android:defaultValue="true" />
        <CheckBoxPreference android:title="Auto Correct" android:key="autocorrect" android:summary="Correct mistyped words" android:defaultValue="true" />
        <CheckBoxPreference android:title="Sentence Case" android:key="autocase" android:summary="Capitalize first letter in sentences" android:defaultValue="true" />
        <CheckBoxPreference android:title="Auto Link" android:key="linksclickable" android:summary="Links and phone numbers are clickable" android:defaultValue="false" />
        <org.paulmach.textedit.ClearSearchSuggestions android:title="Clear Search Suggestions" android:key="clearsearch" android:summary="Click here to clear list of recent searches" android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Save/Open Preferences">
        <org.paulmach.textedit.DefaultDirPreference android:name="Set Default Directory" android:title="Default Directory" android:key="defaultdir" android:summary="Default save/open directory" android:defaultValue="/sdcard/" />
        <CheckBoxPreference android:title="Autocomplete Filenames" android:key="autocomplete" android:summary="Autocomplete text when opening and saving files" android:defaultValue="false" />
        <org.paulmach.textedit.ClearRecentFileListPreference android:title="Clear Recent File List" android:key="clearrecent" android:summary="Click here to clear list of recently opened files" android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Appearance">
        <org.paulmach.textedit.FontTypePreference android:title="Font" android:key="font" android:summary="Choose a font type" android:defaultValue="Monospace" android:dialogTitle="Choose a font type" />
        <org.paulmach.textedit.FontSizePreference android:title="Font Size" android:key="fontsize" android:summary="Choose a font size" android:defaultValue="Medium" android:dialogTitle="Choose a font size" />
        <org.paulmach.textedit.ColorPreference android:title="Font Color" android:key="fontcolor" android:summary="Choose a font color" android:defaultValue="0xffcccccc" android:dialogTitle="Choose a font color" />
        <org.paulmach.textedit.ColorPreference android:title="Background Color" android:key="bgcolor" android:summary="Choose a background color" android:defaultValue="0xff000000" android:dialogTitle="Choose a background color" />
        <CheckBoxPreference android:title="Hide Filename Bar" android:key="hidefilename" android:summary="Allows for more screen space" android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Warranty Information">
        <org.paulmach.textedit.WarrantyPreference android:title="Warranty Information" android:key="warrantyinfo" android:summary="Just a little FYI on the warranty" android:dialogTitle="Warranty Information" />
    </PreferenceCategory>
</PreferenceScreen>